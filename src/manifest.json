{
  "name": "Keyboard Shortcuts for Messenger",
  "version": "2.2.4",
  "description": "Keyboard shortcuts for Facebook Messenger (messenger.com).",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://www.messenger.com/*"],
      "js": ["messenger-shortcuts.js"]
    }
  ],
  "permissions": [
    "*://www.messenger.com/*"
  ],
  "icons": { "48": "icon48.png",
             "128": "icon128.png" },
  "homepage_url": "https://github.com/guoguo12/messenger-shortcuts",
  "web_accessible_resources": [
    "lang/*.json"
  ]
}
